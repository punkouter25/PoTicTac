{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch PoTicTac (Full Stack)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-server",
            "cwd": "${workspaceFolder}/PoTicTacServer",
            "program": "${workspaceFolder}/PoTicTacServer/bin/Debug/net9.0/PoTicTacServer.dll",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Launch Server Only",
            "type": "coreclr",
            "request": "launch",
            "cwd": "${workspaceFolder}/PoTicTacServer",
            "program": "${workspaceFolder}/PoTicTacServer/bin/Debug/net9.0/PoTicTacServer.dll",
            "args": [],
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Attach to PoTicTacServer",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
